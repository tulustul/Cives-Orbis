{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "CityAddYieldsEffect": {
      "additionalProperties": false,
      "properties": {
        "effect": {
          "const": "city.addYields",
          "type": "string"
        },
        "value": {
          "type": "number"
        },
        "yield": {
          "$ref": "#/definitions/YieldKey"
        }
      },
      "required": [
        "effect",
        "value",
        "yield"
      ],
      "type": "object"
    },
    "CityEffect": {
      "anyOf": [
        {
          "$ref": "#/definitions/CityAddYieldsEffect"
        },
        {
          "$ref": "#/definitions/CityMultiplyYieldsEffect"
        },
        {
          "$ref": "#/definitions/CityTransferProductionToYieldsEffect"
        },
        {
          "additionalProperties": false,
          "properties": {
            "defenseBonus": {
              "type": "number"
            },
            "effect": {
              "const": "city.defenseBonus",
              "type": "string"
            }
          },
          "required": [
            "defenseBonus",
            "effect"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "effect": {
              "const": "city.maxHealth",
              "type": "string"
            },
            "maxHealth": {
              "type": "number"
            }
          },
          "required": [
            "effect",
            "maxHealth"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "effect": {
              "const": "city.strength",
              "type": "string"
            },
            "strength": {
              "type": "number"
            }
          },
          "required": [
            "effect",
            "strength"
          ],
          "type": "object"
        }
      ]
    },
    "CityMultiplyYieldsEffect": {
      "additionalProperties": false,
      "properties": {
        "effect": {
          "const": "city.multiplyYields",
          "type": "string"
        },
        "value": {
          "type": "number"
        },
        "yield": {
          "$ref": "#/definitions/YieldKey"
        }
      },
      "required": [
        "effect",
        "value",
        "yield"
      ],
      "type": "object"
    },
    "CityTransferProductionToYieldsEffect": {
      "additionalProperties": false,
      "properties": {
        "effect": {
          "const": "city.transferProductionToYields",
          "type": "string"
        },
        "value": {
          "type": "number"
        },
        "yield": {
          "$ref": "#/definitions/YieldKey"
        }
      },
      "required": [
        "effect",
        "value",
        "yield"
      ],
      "type": "object"
    },
    "JsonBuilding": {
      "additionalProperties": false,
      "properties": {
        "effects": {
          "items": {
            "$ref": "#/definitions/CityEffect"
          },
          "type": "array"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "productionCost": {
          "type": "number"
        },
        "resourceRequirements": {
          "$ref": "#/definitions/Record<string,number>"
        },
        "strongRequirements": {
          "items": {
            "$ref": "#/definitions/JsonRequirement"
          },
          "type": "array"
        },
        "weakRequirements": {
          "items": {
            "$ref": "#/definitions/JsonRequirement"
          },
          "type": "array"
        }
      },
      "required": [
        "effects",
        "id",
        "name",
        "productionCost",
        "strongRequirements",
        "weakRequirements"
      ],
      "type": "object"
    },
    "JsonRequirement": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "never",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "building": {
              "type": "string"
            },
            "type": {
              "const": "cityHaveBuilding",
              "type": "string"
            }
          },
          "required": [
            "building",
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "size": {
              "type": "number"
            },
            "type": {
              "const": "citySize",
              "type": "string"
            }
          },
          "required": [
            "size",
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "cityIsCoastline",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        }
      ]
    },
    "Record<string,number>": {
      "additionalProperties": false,
      "type": "object"
    },
    "YieldKey": {
      "enum": [
        "culture",
        "faith",
        "food",
        "gold",
        "knowledge",
        "production",
        "publicWorks"
      ],
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "items": {
      "items": {
        "$ref": "#/definitions/JsonBuilding"
      },
      "type": "array"
    }
  },
  "required": [
    "$schema",
    "items"
  ],
  "type": "object"
}