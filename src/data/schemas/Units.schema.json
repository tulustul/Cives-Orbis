{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "JsonUnit": {
      "additionalProperties": false,
      "properties": {
        "actionPoints": {
          "type": "number"
        },
        "actions": {
          "items": {
            "$ref": "#/definitions/UnitAction"
          },
          "type": "array"
        },
        "capacity": {
          "type": "number"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "productionCost": {
          "type": "number"
        },
        "resourceRequirements": {
          "$ref": "#/definitions/Record<string,number>"
        },
        "strength": {
          "type": "number"
        },
        "strongRequirements": {
          "items": {
            "$ref": "#/definitions/Requirement"
          },
          "type": "array"
        },
        "supplyRange": {
          "type": "number"
        },
        "trait": {
          "$ref": "#/definitions/UnitTraitName"
        },
        "type": {
          "$ref": "#/definitions/UnitTypeName"
        },
        "weakRequirements": {
          "items": {
            "$ref": "#/definitions/Requirement"
          },
          "type": "array"
        }
      },
      "required": [
        "actionPoints",
        "actions",
        "capacity",
        "id",
        "name",
        "productionCost",
        "strength",
        "strongRequirements",
        "supplyRange",
        "trait",
        "type",
        "weakRequirements"
      ],
      "type": "object"
    },
    "Record<string,number>": {
      "additionalProperties": false,
      "type": "object"
    },
    "Requirement": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "city.never",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "building": {
              "type": "string"
            },
            "type": {
              "const": "city.haveBuilding",
              "type": "string"
            }
          },
          "required": [
            "building",
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "size": {
              "type": "number"
            },
            "type": {
              "const": "city.size",
              "type": "string"
            }
          },
          "required": [
            "size",
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "city.isCoastline",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        }
      ]
    },
    "UnitAction": {
      "enum": [
        "buildClayPit",
        "buildCottage",
        "buildFarm",
        "buildFishery",
        "buildHuntingGround",
        "buildIrrigation",
        "buildLumbermill",
        "buildMine",
        "buildPasture",
        "buildPlantation",
        "buildQuarry",
        "buildRoad",
        "foundCity"
      ],
      "type": "string"
    },
    "UnitTraitName": {
      "enum": [
        "explorer",
        "military",
        "settler",
        "supply",
        "worker"
      ],
      "type": "string"
    },
    "UnitTypeName": {
      "enum": [
        "land",
        "naval"
      ],
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "items": {
      "items": {
        "$ref": "#/definitions/JsonUnit"
      },
      "type": "array"
    }
  },
  "required": [
    "$schema",
    "items"
  ],
  "type": "object"
}