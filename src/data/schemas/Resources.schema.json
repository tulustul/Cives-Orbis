{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "JsonResource": {
      "additionalProperties": false,
      "properties": {
        "categories": {
          "items": {
            "$ref": "#/definitions/ResourceCategory"
          },
          "type": "array"
        },
        "depositDef": {
          "additionalProperties": false,
          "properties": {
            "bonuses": {
              "additionalProperties": false,
              "properties": {
                "transferProductionToCulture": {
                  "type": "number"
                },
                "transferProductionToFood": {
                  "type": "number"
                },
                "transferProductionToPublicWorks": {
                  "type": "number"
                },
                "yieldFactor": {
                  "$ref": "#/definitions/Partial<Yields>"
                },
                "yieldValue": {
                  "$ref": "#/definitions/Partial<Yields>"
                }
              },
              "type": "object"
            },
            "bonusesWhenWorked": {
              "additionalProperties": false,
              "properties": {
                "transferProductionToCulture": {
                  "type": "number"
                },
                "transferProductionToFood": {
                  "type": "number"
                },
                "transferProductionToPublicWorks": {
                  "type": "number"
                },
                "yieldFactor": {
                  "$ref": "#/definitions/Partial<Yields>"
                },
                "yieldValue": {
                  "$ref": "#/definitions/Partial<Yields>"
                }
              },
              "type": "object"
            },
            "requiredImprovement": {
              "type": "string"
            }
          },
          "required": ["bonuses", "bonusesWhenWorked", "requiredImprovement"],
          "type": "object"
        },
        "distribution": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "abundance": {
                "$ref": "#/definitions/ResourceAbundance"
              },
              "climate": {
                "enum": [
                  "arctic",
                  "desert",
                  "savanna",
                  "temperate",
                  "tropical",
                  "tundra"
                ],
                "type": "string"
              },
              "coast": {
                "type": "boolean"
              },
              "forest": {
                "type": "boolean"
              },
              "landForm": {
                "enum": ["hills", "mountains", "plains"],
                "type": "string"
              },
              "richness": {
                "$ref": "#/definitions/ResourceRichness"
              },
              "river": {
                "type": "boolean"
              },
              "seaLevel": {
                "enum": ["deep", "none", "shallow"],
                "type": "string"
              }
            },
            "required": ["abundance", "richness"],
            "type": "object"
          },
          "type": "array"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["categories", "distribution", "id", "name"],
      "type": "object"
    },
    "Partial<Yields>": {
      "additionalProperties": false,
      "properties": {
        "culture": {
          "type": "number"
        },
        "faith": {
          "type": "number"
        },
        "food": {
          "type": "number"
        },
        "gold": {
          "type": "number"
        },
        "knowledge": {
          "type": "number"
        },
        "production": {
          "type": "number"
        },
        "publicWorks": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "ResourceAbundance": {
      "enum": ["common", "rare", "veryCommon", "veryRare"],
      "type": "string"
    },
    "ResourceCategory": {
      "enum": [
        "food",
        "luxury",
        "manmade",
        "material",
        "mineral",
        "natural",
        "organic",
        "strategic"
      ],
      "type": "string"
    },
    "ResourceRichness": {
      "enum": ["poor", "rich", "veryPoor", "veryRich"],
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "items": {
      "items": {
        "$ref": "#/definitions/JsonResource"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "items"],
  "type": "object"
}
